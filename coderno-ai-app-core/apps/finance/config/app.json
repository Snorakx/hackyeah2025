{
  "app": {
    "name": "Finance Tracker",
    "version": "1.0.0",
    "description": "AI-powered personal finance management"
  },
  "onboarding": {
    "steps": [
      {
        "id": "financial-info",
        "title": "Twoja sytuacja finansowa",
        "description": "Zbierzmy podstawowe informacje o Twoich finansach",
        "fields": [
          {
            "key": "monthly_income",
            "type": "number",
            "label": "Miesięczne dochody (PLN)",
            "placeholder": "np. 5000",
            "required": true,
            "validation": {
              "min": 0,
              "max": 100000
            }
          },
          {
            "key": "monthly_expenses",
            "type": "number",
            "label": "Miesięczne wydatki (PLN)",
            "placeholder": "np. 3000",
            "required": true,
            "validation": {
              "min": 0,
              "max": 100000
            }
          },
          {
            "key": "savings_goal",
            "type": "number",
            "label": "Cel oszczędnościowy (PLN)",
            "placeholder": "np. 50000",
            "required": false,
            "validation": {
              "min": 0
            }
          }
        ]
      },
      {
        "id": "financial-goals",
        "title": "Twoje cele finansowe",
        "description": "Co chcesz osiągnąć?",
        "fields": [
          {
            "key": "primary_goal",
            "type": "select",
            "label": "Główny cel",
            "required": true,
            "options": [
              { "value": "emergency_fund", "label": "Fundusz awaryjny" },
              { "value": "house_purchase", "label": "Zakup mieszkania" },
              { "value": "retirement", "label": "Emerytura" },
              { "value": "debt_payoff", "label": "Spłata długów" },
              { "value": "investment", "label": "Inwestycje" }
            ]
          },
          {
            "key": "time_horizon",
            "type": "select",
            "label": "Horyzont czasowy",
            "required": true,
            "options": [
              { "value": "short_term", "label": "Krótkoterminowy (1-2 lata)" },
              { "value": "medium_term", "label": "Średnioterminowy (3-5 lat)" },
              { "value": "long_term", "label": "Długoterminowy (5+ lat)" }
            ]
          }
        ]
      }
    ],
    "validation": {
      "rules": [
        {
          "field": "monthly_income",
          "type": "required",
          "message": "Dochody są wymagane"
        },
        {
          "field": "monthly_expenses",
          "type": "required",
          "message": "Wydatki są wymagane"
        }
      ],
      "messages": {
        "required": "To pole jest wymagane",
        "min": "Wartość jest za mała",
        "max": "Wartość jest za duża"
      }
    },
    "completion": {
      "redirectTo": "/dashboard",
      "successMessage": "Witaj w Finance Tracker! Twoje dane zostały zapisane.",
      "createUserRecord": true,
      "generateInitialData": true
    }
  },
  "ai": {
    "provider": "openrouter",
    "apiKey": "${OPENROUTER_API_KEY}",
    "prompts": [
      {
        "id": "budget_analysis",
        "name": "Analiza budżetu",
        "systemPrompt": "Jesteś ekspertem ds. finansów osobistych. Analizujesz budżet użytkownika i dajesz praktyczne rady.",
        "userContextTemplate": "Użytkownik: {user_data}\nBudżet: {budget_data}\nCel: {goal}",
        "responseFormat": "budget_analysis",
        "temperature": 0.2,
        "maxTokens": 600
      },
      {
        "id": "investment_advice",
        "name": "Rady inwestycyjne",
        "systemPrompt": "Jesteś doradcą finansowym. Tworzysz spersonalizowane plany inwestycyjne.",
        "userContextTemplate": "Użytkownik: {user_data}\nCel: {goal}\nHoryzont: {time_horizon}\nKwota: {amount}",
        "responseFormat": "investment_plan",
        "temperature": 0.3,
        "maxTokens": 800
      }
    ],
    "responseFormats": [
      {
        "id": "budget_analysis",
        "name": "Analiza budżetu",
        "schema": {
          "type": "object",
          "properties": {
            "totalIncome": { "type": "number" },
            "totalExpenses": { "type": "number" },
            "savingsRate": { "type": "number" },
            "recommendations": {
              "type": "array",
              "items": { "type": "string" }
            },
            "riskLevel": { "type": "string", "enum": ["low", "medium", "high"] }
          }
        }
      }
    ]
  },
  "database": {
    "tables": [
      {
        "name": "users",
        "fields": [
          { "name": "id", "type": "uuid", "required": true, "unique": true },
          { "name": "email", "type": "string", "required": true, "unique": true },
          { "name": "monthly_income", "type": "number", "required": true },
          { "name": "monthly_expenses", "type": "number", "required": true },
          { "name": "savings_goal", "type": "number", "required": false },
          { "name": "primary_goal", "type": "string", "required": true },
          { "name": "time_horizon", "type": "string", "required": true },
          { "name": "created_at", "type": "date", "required": true },
          { "name": "updated_at", "type": "date", "required": true }
        ],
        "primaryKey": "id",
        "timestamps": true
      }
    ]
  },
  "ui": {
    "theme": {
      "primaryColor": "#10B981",
      "secondaryColor": "#3B82F6",
      "fontFamily": "Inter, sans-serif",
      "borderRadius": "8px"
    }
  }
}
