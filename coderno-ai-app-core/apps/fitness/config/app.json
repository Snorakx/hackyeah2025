{
  "app": {
    "name": "Fitness Tracker",
    "version": "1.0.0",
    "description": "AI-powered fitness and nutrition tracking app"
  },
  "onboarding": {
    "steps": [
      {
        "id": "basic-info",
        "title": "Podstawowe informacje",
        "description": "Zbierzmy podstawowe dane o Tobie",
        "fields": [
          {
            "key": "weight",
            "type": "number",
            "label": "Waga (kg)",
            "placeholder": "np. 70",
            "required": true,
            "validation": {
              "min": 30,
              "max": 200
            }
          },
          {
            "key": "height",
            "type": "number",
            "label": "Wzrost (cm)",
            "placeholder": "np. 175",
            "required": true,
            "validation": {
              "min": 120,
              "max": 250
            }
          },
          {
            "key": "age",
            "type": "number",
            "label": "Wiek",
            "placeholder": "np. 25",
            "required": true,
            "validation": {
              "min": 16,
              "max": 100
            }
          },
          {
            "key": "gender",
            "type": "select",
            "label": "Płeć",
            "required": true,
            "options": [
              { "value": "male", "label": "Mężczyzna" },
              { "value": "female", "label": "Kobieta" },
              { "value": "other", "label": "Inne" }
            ]
          }
        ]
      },
      {
        "id": "goals",
        "title": "Twoje cele",
        "description": "Co chcesz osiągnąć?",
        "fields": [
          {
            "key": "goal",
            "type": "select",
            "label": "Główny cel",
            "required": true,
            "options": [
              { "value": "weight_loss", "label": "Redukcja wagi" },
              { "value": "maintenance", "label": "Utrzymanie wagi" },
              { "value": "muscle_gain", "label": "Przyrost masy" }
            ]
          },
          {
            "key": "target_weight",
            "type": "number",
            "label": "Docelowa waga (kg)",
            "placeholder": "np. 65",
            "required": false,
            "conditional": {
              "field": "goal",
              "operator": "not_equals",
              "value": "maintenance"
            }
          },
          {
            "key": "goal_intensity",
            "type": "select",
            "label": "Intensywność",
            "required": true,
            "options": [
              { "value": "conservative", "label": "Ostrożnie (-0.25kg/tydz)" },
              { "value": "moderate", "label": "Umiarkowanie (-0.5kg/tydz)" },
              { "value": "aggressive", "label": "Agresywnie (-1kg/tydz)" }
            ]
          }
        ]
      },
      {
        "id": "activity",
        "title": "Aktywność fizyczna",
        "description": "Jak aktywny jesteś?",
        "fields": [
          {
            "key": "activity_level",
            "type": "select",
            "label": "Poziom aktywności",
            "required": true,
            "options": [
              { "value": "sedentary", "label": "Siedzący tryb życia" },
              { "value": "light", "label": "Lekka aktywność (1-3 dni/tydz)" },
              { "value": "moderate", "label": "Umiarkowana aktywność (3-5 dni/tydz)" },
              { "value": "active", "label": "Wysoka aktywność (6-7 dni/tydz)" },
              { "value": "very_active", "label": "Bardzo wysoka aktywność" }
            ]
          },
          {
            "key": "workout_days",
            "type": "number",
            "label": "Dni treningowe w tygodniu",
            "placeholder": "np. 3",
            "required": true,
            "validation": {
              "min": 0,
              "max": 7
            }
          }
        ]
      },
      {
        "id": "preferences",
        "title": "Preferencje",
        "description": "Ostatnie pytania",
        "fields": [
          {
            "key": "diet_preferences",
            "type": "multiselect",
            "label": "Preferencje żywieniowe",
            "required": false,
            "options": [
              { "value": "vegetarian", "label": "Wegetariańska" },
              { "value": "vegan", "label": "Wegańska" },
              { "value": "keto", "label": "Keto" },
              { "value": "paleo", "label": "Paleo" },
              { "value": "mediterranean", "label": "Śródziemnomorska" }
            ]
          },
          {
            "key": "allergies",
            "type": "multiselect",
            "label": "Alergie i nietolerancje",
            "required": false,
            "options": [
              { "value": "gluten", "label": "Gluten" },
              { "value": "lactose", "label": "Laktoza" },
              { "value": "nuts", "label": "Orzechy" },
              { "value": "shellfish", "label": "Skorupiaki" }
            ]
          },
          {
            "key": "units",
            "type": "select",
            "label": "Jednostki",
            "required": true,
            "options": [
              { "value": "metric", "label": "Metryczne (kg, cm)" },
              { "value": "imperial", "label": "Imperialne (lbs, ft)" }
            ]
          }
        ]
      }
    ],
    "validation": {
      "rules": [
        {
          "field": "weight",
          "type": "required",
          "message": "Waga jest wymagana"
        },
        {
          "field": "height",
          "type": "required",
          "message": "Wzrost jest wymagany"
        },
        {
          "field": "age",
          "type": "required",
          "message": "Wiek jest wymagany"
        }
      ],
      "messages": {
        "required": "To pole jest wymagane",
        "email": "Nieprawidłowy adres email",
        "min": "Wartość jest za mała",
        "max": "Wartość jest za duża"
      }
    },
    "completion": {
      "redirectTo": "/dashboard",
      "successMessage": "Witaj w Fitness Tracker! Twoje dane zostały zapisane.",
      "createUserRecord": true,
      "generateInitialData": true
    }
  },
  "ai": {
    "provider": "openrouter",
    "apiKey": "${OPENROUTER_API_KEY}",
    "prompts": [
      {
        "id": "meal_analysis",
        "name": "Analiza posiłku",
        "systemPrompt": "Jesteś ekspertem ds. żywienia. Analizujesz opisy posiłków i zwracasz dokładne wartości kalorii oraz makroskładników. Używasz standardowych porcji dostosowanych do regionu użytkownika.",
        "userContextTemplate": "Użytkownik: {user_data}\nOpis posiłku: {meal_description}\nRegion: {region}",
        "responseFormat": "nutrition_analysis",
        "temperature": 0.1,
        "maxTokens": 500
      },
      {
        "id": "workout_suggestion",
        "name": "Sugestie treningowe",
        "systemPrompt": "Jesteś trenerem personalnym. Tworzysz spersonalizowane plany treningowe na podstawie celów i poziomu użytkownika.",
        "userContextTemplate": "Użytkownik: {user_data}\nCel: {goal}\nPoziom: {activity_level}\nDni treningowe: {workout_days}",
        "responseFormat": "workout_plan",
        "temperature": 0.3,
        "maxTokens": 800
      }
    ],
    "responseFormats": [
      {
        "id": "nutrition_analysis",
        "name": "Analiza żywieniowa",
        "schema": {
          "type": "object",
          "properties": {
            "totalCalories": { "type": "number" },
            "totalProtein": { "type": "number" },
            "totalCarbs": { "type": "number" },
            "totalFat": { "type": "number" },
            "meals": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "name": { "type": "string" },
                  "mealType": { "type": "string", "enum": ["breakfast", "lunch", "dinner", "snack"] },
                  "calories": { "type": "number" },
                  "protein": { "type": "number" },
                  "carbs": { "type": "number" },
                  "fat": { "type": "number" }
                }
              }
            },
            "confidence": { "type": "string", "enum": ["high", "medium", "low"] },
            "notes": { "type": "string" }
          }
        }
      },
      {
        "id": "workout_plan",
        "name": "Plan treningowy",
        "schema": {
          "type": "object",
          "properties": {
            "weeklyPlan": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "day": { "type": "string" },
                  "workouts": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "name": { "type": "string" },
                        "type": { "type": "string" },
                        "duration": { "type": "number" },
                        "exercises": { "type": "array" }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    ]
  },
  "database": {
    "tables": [
      {
        "name": "users",
        "fields": [
          { "name": "id", "type": "uuid", "required": true, "unique": true },
          { "name": "email", "type": "string", "required": true, "unique": true },
          { "name": "weight", "type": "number", "required": true },
          { "name": "height", "type": "number", "required": true },
          { "name": "age", "type": "number", "required": true },
          { "name": "gender", "type": "string", "required": true },
          { "name": "goal", "type": "string", "required": true },
          { "name": "activity_level", "type": "string", "required": true },
          { "name": "preferences", "type": "json", "required": false },
          { "name": "created_at", "type": "date", "required": true },
          { "name": "updated_at", "type": "date", "required": true }
        ],
        "primaryKey": "id",
        "timestamps": true
      },
      {
        "name": "meals",
        "fields": [
          { "name": "id", "type": "uuid", "required": true, "unique": true },
          { "name": "user_id", "type": "uuid", "required": true },
          { "name": "date", "type": "date", "required": true },
          { "name": "type", "type": "string", "required": true },
          { "name": "calories", "type": "number", "required": true },
          { "name": "protein", "type": "number", "required": true },
          { "name": "carbs", "type": "number", "required": true },
          { "name": "fat", "type": "number", "required": true },
          { "name": "created_at", "type": "date", "required": true }
        ],
        "primaryKey": "id",
        "timestamps": true
      }
    ],
    "relationships": [
      {
        "from": "meals",
        "to": "users",
        "type": "many-to-one",
        "foreignKey": "user_id"
      }
    ]
  },
  "ui": {
    "theme": {
      "primaryColor": "#3B82F6",
      "secondaryColor": "#10B981",
      "fontFamily": "Inter, sans-serif",
      "borderRadius": "8px",
      "spacing": {
        "xs": "4px",
        "sm": "8px",
        "md": "16px",
        "lg": "24px",
        "xl": "32px"
      }
    },
    "components": [
      {
        "id": "onboarding-form",
        "type": "form",
        "props": {
          "className": "space-y-6",
          "submitText": "Dalej",
          "backText": "Wstecz"
        }
      },
      {
        "id": "meal-card",
        "type": "card",
        "props": {
          "className": "bg-white rounded-lg shadow-md p-4",
          "title": "Posiłek"
        }
      }
    ]
  },
